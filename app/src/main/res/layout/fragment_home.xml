<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/mToolbarTitleLabel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="首页"
        android:textColor="#121312"
        android:textSize="18sp"
        android:background="?attr/colorPrimary"
        android:padding="10dp"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Banner轮播条-->
                <com.youth.banner.Banner
                    android:id="@+id/HomeBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    circle:image_scale_type="fit_xy"
                    circle:scroll_time="500"
                    android:layout_margin="@dimen/distance_10">
                </com.youth.banner.Banner>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_10">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="10dp"
                        android:background="@drawable/ic_circle_red"
                        android:layout_gravity="bottom"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#181918"
                        android:text="热门品牌"/>
                </FrameLayout>
                <!--热门品牌 -->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/RvHotSellingBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:background="@drawable/bg_home_banner"
                        android:layout_margin="@dimen/distance_10"
                        android:nestedScrollingEnabled="false"/>
                <FrameLayout
                    android:id="@+id/FlLimitedTimeTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_10"
                    >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="10dp"
                        android:background="@drawable/ic_circle_red"
                        android:layout_gravity="bottom"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#181918"
                        android:textSize="18sp"
                        android:text="限时秒杀"/>
                </FrameLayout>
                <!--限时秒杀 -->
                <RelativeLayout
                    android:id="@+id/RlLimitedTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/RvLimitedTime"
                        android:background="@drawable/bg_home_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="10dp" />
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/FlHotGoodsTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_10">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="10dp"
                        android:background="@drawable/ic_circle_red"
                        android:layout_gravity="bottom"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#181918"
                        android:textSize="18sp"
                        android:text="热销商品"/>
                </FrameLayout>
                <!--热销商品 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/RvHotGoods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="10dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>